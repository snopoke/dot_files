#!/bin/bash
# Install dropbox via normal method then:
# $ mkdir /media/skelly/data/simon_dropbox
# $ ln -s ~/.Xauthority /media/skelly/data/simon_dropbox/
# $ HOME="/media/skelly/data/simon_dropbox"
# $ /home/skelly/.dropbox-dist/dropboxd

function start_dropbox {
	HOME="$1"
	cd $HOME
	PIDFLE="$HOME/.dropbox/dropbox.pid"
	PID=$(cat $PIDFLE)
	grep dropbox "/proc/$PID/cmdline" -q
	if [ "$?" -eq "0" ]; then
		echo "Dropbox alreading running in $HOME"
	else
		echo "Starting Dropbox in $HOME"
		$HOME/.dropbox-dist/dropboxd &
	fi
}

PATH_PREFIX='/home/skelly/dropbox_'

if [ $# -eq 0 ]; then
	for account in dimagi simon
	do
		start_dropbox "${PATH_PREFIX}${account}"
	done
else
	ACCOUNT=$1
	start_dropbox "${PATH_PREFIX}${ACCOUNT}"
fi
